{
  "name": "vimpil/whatsapp-media-crypto",
  "description": "PSR-7 stream decorators for WhatsApp media encryption/decryption",
  "type": "library",
  "keywords": [
    "whatsapp",
    "encryption",
    "media",
    "psr-7",
    "stream",
    "crypto"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Kirill Shevchenko",
      "email": "vimpil04@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "psr/http-message": "^1.0 || ^2.0",
    "guzzlehttp/psr7": "^2.0",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "WhatsAppMedia\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WhatsAppMedia\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
